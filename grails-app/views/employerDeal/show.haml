.container
  %h1
    %g:message(code="employer.dealShow.vacancy")
  .row
    .col-md-8
      %h2
      %dl.dl-horizontal
        %dt
          %g:message(code="employer.dealShow.vacancy.name")
        %dd Лесоруб
        %dt
          %g:message(code="employer.dealShow.vacancy.description")
        %dd Должен уметь рубить лес
        %dt
          %g:message(code="employer.dealShow.vacancy.salary")
        %dd 10тыс.-15тыс. руб.
        %dt
          %g:message(code="employer.dealShow.vacancy.createdAt")
        %dd 07.01.2014
        %dt
          %g:message(code="employer.dealShow.vacancy.expireAt")
        %dd 09.01.2014
    .col-md-4
      %h2
        %g:message(code="employer.dealShow.recruiter")
      %p Павел Петров
      .tools
        %a.btn.btn-danger(data-original-title="" data-placement="left" data-toggle="confirmation" title="")
          %g:message(code="employer.dealShow.decline")
      %p
  %h2
    %g:message(code="employer.dealShow.applicantList.title")
  .row
    .col-md-6
      %ul.list-group
        %li.list-group-item
          Иван Иванов
          %g:link(mapping="employerShowApplicant" params="[id: '1']" class="btn btn-link pull-right")
            %g:message(code="employer.dealShow.applicantList.more")
        %li.list-group-item
          Пётр Петров
          %g:link(mapping="employerShowApplicant" params="[id: '1']" class="btn btn-link pull-right")
            %g:message(code="employer.dealShow.applicantList.more")
        %li.list-group-item
          Константин Константинопольский
          %g:link(mapping="employerShowApplicant" params="[id: '1']" class="btn btn-link pull-right")
            %g:message(code="employer.dealShow.applicantList.more")
